<Window x:Class="db_salam.Login"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Авторизация" Height="300" Width="500" Background="LightPink">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="69*"/>
            <ColumnDefinition Width="331*"/>
        </Grid.ColumnDefinitions>
        <TextBlock Text="Логин" Margin="10,10,0,0" VerticalAlignment="Top" HorizontalAlignment="Left"/>
        <TextBox x:Name="tbLogin" Margin="10,30,10,0" VerticalAlignment="Top" Height="25" Grid.ColumnSpan="2"/>

        <TextBlock Text="Пароль" Margin="10,70,0,0" VerticalAlignment="Top" HorizontalAlignment="Left"/>
        <PasswordBox x:Name="pbPassword" Margin="10,90,10,0" VerticalAlignment="Top" Height="25" Grid.ColumnSpan="2"/>

        <Button Content="Войти" Margin="10,130,10,0" VerticalAlignment="Top" Click="Button_Login_Click" Grid.ColumnSpan="2"/>
        <Button Content="Регистрация" Margin="74,171,159,0" VerticalAlignment="Top" Click="Button_Register_Click" Grid.Column="1"/>
    </Grid>
</Window>