<Window x:Class="db_salam.CaptchaWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Капча" Height="280" Width="300">
    <Grid Margin="0,0,0,-33">
        <Image x:Name="CaptchaImage" Width="250" Height="100" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="23,10,0,0"/>
        <TextBox x:Name="CaptchaInput" Width="200" Height="30" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        <Button Content="Подтвердить" Width="100" Height="30" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,180,0,0" Click="Button_Confirm_Click"/>
    </Grid>
</Window>