<Window x:Class="db_salam.Register"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:db_salam"
        mc:Ignorable="d"
                Title="Регистрация" Height="300" Width="400" Background="LightPink">
    <Grid>
        <TextBlock Text="Логин" Margin="10,20,0,0" VerticalAlignment="Top" HorizontalAlignment="Left"/>
        <TextBox x:Name="tbLogin" Margin="10,50,10,0" VerticalAlignment="Top" Height="25"/>

        <TextBlock Text="Пароль" Margin="10,90,0,0" VerticalAlignment="Top" HorizontalAlignment="Left"/>
        <PasswordBox x:Name="pbPassword" Margin="10,120,10,0" VerticalAlignment="Top" Height="25"/>

        <Button Content="Зарегистрироваться" Margin="10,160,10,0" VerticalAlignment="Top" Click="Button_Register_Click"/>
    </Grid>

</Window>
